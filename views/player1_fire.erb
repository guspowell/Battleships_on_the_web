<div style= "font-size: 20px; font-family: helvetica; text-align: center">
  <h2>Player 1 take a shot</h2> 

  <form action= "/player1_fire">
      <% if @coord %>
        <p>Miss</p>
        <a href="player2_fire">Player 2's turn</a>
      <% else %>
        Enter coordinate
        <input type="text" name="coord">
        <input type="submit" value="FIRE!">
      <% end %>
  </form>
</div>
